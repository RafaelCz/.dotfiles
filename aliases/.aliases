# some more ls aliases
alias ls='ls --color=tty --group-directories-first'


# use autossh instead of ssh
# alias ssh='autossh'

# global search
f() {
    find / -name '$@' 2> /dev/null
}

# use SSH session with tmux
s() {
    autossh -t "$@" 'tmux attach || tmux new'
}

# extract archive
extract () {
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)	tar xvjf $1		;;
			*.tar.gz)		tar xvzf $1		;;
			*.bz2)			bunzip2 $1		;;
			*.rar)			unrar x $1		;;
			*.gz)				gunzip $1			;;
			*.tar)			tar xvf $1		;;
			*.tbz2)			tar xvjf $1		;;
			*.tgz)			tar xvzf $1		;;
			*.zip)			unzip $1			;;
			*.Z)				uncompress $1	;;
			*.7z)				7z x $1				;;
			*)					echo "don't know how to extract '$1'...";;
		esac
	else
		echo "'$1' is not a valid file!"
	fi
}

# show all open ports
alias ports='netstat -tulanp'
